{% extends 'layout/layout.twig' %}

{% block title %}Authentication{% endblock %}

{% block description %}{% endblock %}

{% block script %}
<script src="js/recaptcha.js"></script>
<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" 
    async 
    defer>
</script>
{% endblock %}

{% block main %}
<main>
    <form class="form" 
        action="{{ url('auth')}}" 
        method="post">
        <fieldset>
            <ul>
                <li>
                    <label class="anima-slideR-this" 
                        for="email">
                        Email
                    </label>
                    <input id="email" 
                        class="anima-slideL-this" 
                        name="email" 
                        type="email" 
                        placeholder="Insert your email" 
                        required>
                </li>
                <li>
                    <label class="anima-slideR-this" 
                        for="pass">
                        Password
                    </label>
                    <input id="pass" 
                        class="anima-slideL-this" 
                        name="pass" 
                        type="password" 
                        placeholder="Insert your password" 
                        autocomplete="off" 
                        required>
                </li>
            </ul>
            <ul>
                <li>
                    <div id="recaptcha" 
                        class="g-recaptcha" 
                        data-sitekey="6Lczh6gZAAAAAF6izdIXTKZ7Xgxg18QSeC3wzqCW">
                    </div>
                </li>
                <li>
                    <input class="anima-slideR-this" 
                        type="reset" 
                        value="Reset">
                    <input class="anima-slideL-this" 
                        type="submit" 
                        value="Login">
                </li>
            </ul>
        </fieldset>
    </form>
    <a class="btn-black btn-lg" 
        href="{{ url('home') }}">
        Quit
    </a>
</main>
{% endblock %}
