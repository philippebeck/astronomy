{% extends 'layout/layout.twig' %}

{% block title %}Hubble News List{% endblock %}

{% block description %}List of Releases from Hubble Space Telescope{% endblock %}

{% block main %}
{% if not news %}
    {{ redirect('hubble') }}
{% endif %}

<main>
    {{ include("front/hubble/news/newsPagination.twig") }}

    <ul>

    {% for release in news %}
        <li>
            <form method="post" 
                action={{ url('hubble!release', {'id': release.news_id}) }}>
                <input name="item" 
                    type="hidden" 
                    value="{{ release.news_id }}">
                <input class="button-brown" 
                    type="submit" 
                    value="{{ release.name }}" 
                    title="Watch the Release {{ release.news_id }}">
            </form>
        </li>
    {% endfor %}

    </ul>

    {{ include("front/hubble/news/newsPagination.twig") }}
</main>
{% endblock %}
