{% extends 'layout/layout.twig' %}

{% block title %}Hubble Images{% endblock %}

{% block description %}List of Images from Hubble Space Telescope{% endblock %}

{% block main %}
{% if not images %}
    {{ redirect('hubble') }}
{% endif %}

<main class="container-90tn-80sm">
    <ul class="row placo-evenly plait-center">
        <li>
            <a class="btn-blue"
                href="{{ url('hubble!images', {'page': getGet('page') - 1}) }}" 
                title="Go to the Previous Page">
                <i class="far fa-arrow-alt-circle-left fa-2x"></i>
            </a>
        </li>
        <li class="deco">
            Page {{ getGet('page') }}
        </li>
        <li>
            <a class="btn-blue" 
                href="{{ url('hubble!images', {'page': getGet('page') + 1}) }}" 
                title="Go to the Next Page">
                <i class="far fa-arrow-alt-circle-right fa-2x"></i>
            </a>
        </li>
    </ul>

    <ul>

    {% for image in images %}
        <li>
            <form method="post" 
                action={{ url('hubble!image', {'id': image.id}) }}>
                <label for="item">
                    {{ image.name }}
                </label>
                <input name="item" 
                    type="hidden" 
                    value="{{ image.id }}">
                <br>
                <input class="button-brown" 
                    type="submit" 
                    value="#{{ image.id }}" 
                    title="Watch the Image {{ image.name }} ({{ image.id }})">
            </form>
            <i class="fas fa-minus fa-lg"></i>
        </li>
    {% endfor %}

    </ul>

    <ul class="row placo-evenly plait-center">
        <li>
            <a class="btn-blue"
                href="{{ url('hubble!images', {'page': getGet('page') - 1}) }}" 
                title="Go to the Previous Page">
                <i class="far fa-arrow-alt-circle-left fa-2x"></i>
            </a>
        </li>
        <li class="deco">
            Page {{ getGet('page') }}
        </li>
        <li>
            <a class="btn-blue" 
                href="{{ url('hubble!images', {'page': getGet('page') + 1}) }}" 
                title="Go to the Next Page">
                <i class="far fa-arrow-alt-circle-right fa-2x"></i>
            </a>
        </li>
    </ul>
</main>
{% endblock %}
